<h1>Users show</h1>
<h3>These are the details of the user you selected:</h3>

<div class="user_show">
  <img src="<%= @user.photo %>" alt="Avatar" />
  <h2><%= @user.name %></h2>
  <p>Number of posts: <%= @user.posts.count %></p>
</div>

<div class="user_bio">
  <h3>Bio</h3>
  <p><%= @user.bio %></p>
</div>
<% @posts.each do |post| %>
  <div>
    <h3>Post #<%= post.id %> <%= post.title %> </h3>
    <p><%= post.text %></p>
    <span>Comments: <%= post.comments.count %></span>
    <span>Created at: <%= post.created_at %></span>
    <span>Likes: <%= post.likes.count %></span>
    <% if can? :destroy, post %>
      <%= button_to "Delete", user_post_path(@user, post), method: :delete %>
    <% end %>
  </div>
<% end %>
<br>
<%= button_to "See all posts", user_posts_path(@user.id), method: :get %>
<br>
<%= link_to "Back to users index", users_path %>

